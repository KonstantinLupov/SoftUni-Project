@model C_Sharp_Project.Models.Player
@{
    ViewBag.Title = Model.Name;
}


<div class="jumbotron" style="background-color: #ff2400; min-height:850px;">
    <h1 style="text-align:center ">@Model.Name</h1>
    <div class="col-sm-6">
        <p>
           @Model.Content
        </p>
    </div>
    <div style="background-image: url('@Model.Imgsource');
    background-repeat: no-repeat ;
    background-size: contain;
    position: absolute;
    float: left;
    clear:left;
    top: 175px;
    right: 400px;
    height: 720px;
    width: 470px;
    ">
    </div>
</div>
<footer class="pull-right" style="margin-bottom:250px">
    @Html.ActionLink("Edit", "Edit", "Player", new { @id = Model.Id }, new { @class = "btn btn-success btn-s" })
    @Html.ActionLink("Delete", "Delete", "Player", new { @id = Model.Id }, new { @class = "btn btn-danger btn-s" })
    @Html.ActionLink("Back", "Index", "Player", null, new { @class = "btn btn-default btn-s" })
</footer>